generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusLaporan {
  BARU
  DIPROSES
  SELESAI
}

enum TipeMeter {
  PASCA_BAYAR
  PRA_BAYAR
}

enum UserRole {
  ADMIN
  PETUGAS_YANTEK
  PETUGAS_PENYAMBUNGAN
}

enum ActivityType {
  REPORT_CREATED
  REPORT_UPDATED
  REPORT_DELETED
  REPORT_COMPLETED
  REPORT_PROCESSED
}

model Token {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model User {
  id         String    @id @default(cuid())
  username   String    @unique
  password   String
  name       String    
  createdAt  DateTime  @default(now())
  role       UserRole
  lastOnline DateTime?

  relatedActivityLogs ActivityLog[]
  tokens     Token[]
}

model LaporanYantek {
  id                      String       @id@unique
  ID_Pelanggan            String      
  nomor_meter             String
  tipe_meter              TipeMeter
  no_telepon_pelanggan    String
  nama_petugas            String
  foto_rumah              String
  foto_meter_rusak        String
  stand_meter_cabut       String?
  sisa_pulsa              String?
  foto_ba_gangguan        String
  titik_koordinat         String
  status_laporan          StatusLaporan @default(BARU)
  createdAt               DateTime     @default(now())

  @@index([id])
  laporan_penyambungan    LaporanPenyambungan?
  activityLogs ActivityLog[] @relation("YantekLogs")
}

model LaporanPenyambungan {
  id                      String       @id 
  laporan_yante_id        String       @unique
  foto_pemasangan_meter   String
  foto_rumah_pelanggan    String
  foto_ba_pemasangan      String
  nama_petugas            String
  status_laporan          StatusLaporan @default(SELESAI)
  createdAt               DateTime     @default(now())
  
  @@index([id])
  laporan_yante           LaporanYantek  @relation(fields: [laporan_yante_id], references: [id], onDelete: Cascade)
  activityLogs ActivityLog[] @relation("PenyambunganLogs")
}

model ActivityLog {
  id                      String        @id @default(cuid())
  activityType            ActivityType
  timestamp               DateTime      @default(now())
  message                 String?

  relatedYantekReportId   String?
  relatedYantekReport     LaporanYantek? @relation("YantekLogs", fields: [relatedYantekReportId], references: [id], onDelete: Cascade)

  relatedPenyambunganReportId String?
  relatedPenyambunganReport LaporanPenyambungan? @relation("PenyambunganLogs", fields: [relatedPenyambunganReportId], references: [id], onDelete: Cascade)

  relatedUserId           String?
  relatedUser             User?         @relation(fields: [relatedUserId], references: [id], onDelete: SetNull)

  @@index([timestamp])
  @@index([relatedYantekReportId])
  @@index([relatedPenyambunganReportId])
  @@index([relatedUserId])
}
