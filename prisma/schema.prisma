generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusLaporan {
  BARU
  DIPROSES
  SELESAI
}

enum TipeMeter {
  PASCA_BAYAR
  PRA_BAYAR
}

enum UserRole {
  ADMIN
  PETUGAS_YANTEK
  PETUGAS_PENYAMBUNGAN
}

enum ActivityType {
  REPORT_CREATED
  REPORT_UPDATED
  REPORT_DELETED
  REPORT_COMPLETED
  REPORT_PROCESSED
}

model Token {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}

model User {
  id         String    @id @default(cuid())
  username   String    @unique
  password   String
  name       String
  createdAt  DateTime  @default(now())
  role       UserRole
  lastOnline DateTime?
  
  tokens              Token[]

  @@index([role])
}

model LaporanYantek {
  id                   String        @id @unique
  ID_Pelanggan         String
  nomor_meter          String
  tipe_meter           TipeMeter
  no_telepon_pelanggan String
  nama_petugas         String
  foto_rumah           String
  foto_meter_rusak     String
  foto_petugas         String
  stand_meter_cabut    String?
  sisa_pulsa           String?
  foto_ba_gangguan     String
  titik_koordinat      String
  status_laporan       StatusLaporan @default(BARU)
  keterangan           String?
  createdAt            DateTime      @default(now())

  laporan_penyambungan LaporanPenyambungan?

  @@index([status_laporan]) // Added index for status filtering
  @@index([createdAt]) // Added index for ordering
}

model LaporanPenyambungan {
  id                    String        @id
  laporan_yante_id      String        @unique
  foto_pemasangan_meter String
  foto_rumah_pelanggan  String
  foto_petugas          String
  foto_ba_pemasangan    String
  nama_petugas          String
  status_laporan        StatusLaporan @default(SELESAI)
  createdAt             DateTime      @default(now())

  laporan_yante LaporanYantek @relation(fields: [laporan_yante_id], references: [id], onDelete: Cascade)

  @@index([laporan_yante_id]) // Explicitly added index for foreign key/unique field
}

model ActivityLog {
  id           String       @id @default(cuid())
  activityType ActivityType
  timestamp    DateTime     @default(now())
  message      String?

  deletedReportId             String? 
  createdYantekReportId       String? 
  createdPenyambunganReportId String? 
  createdByUserId             String? 

  @@index([timestamp])
  @@index([createdYantekReportId])
  @@index([createdPenyambunganReportId])
  @@index([createdByUserId])
}
