generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StatusLaporan {
  BARU
  DIPROSES
  SELESAI
}

enum TipeMeter {
  PASCA_BAYAR
  PRA_BAYAR
}

enum UserRole {
  ADMIN
  PETUGAS_YANTEK
  PETUGAS_PENYAMBUNGAN
}

model Token {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model User {
  id         String    @id @default(cuid())
  username   String    @unique
  password   String
  name       String    @unique
  createdAt  DateTime  @default(now())
  role       UserRole
  lastOnline DateTime?

  tokens     Token[]
}

model LaporanYantek {
  id                      String       @id@unique
  ID_Pelanggan            String      
  nomor_meter             String
  tipe_meter              TipeMeter
  no_telepon_pelanggan    String
  nama_petugas            String
  foto_rumah              String
  foto_meter_rusak        String
  stand_meter_cabut       String?
  sisa_pulsa              String?
  foto_ba_gangguan        String
  titik_koordinat         String
  status_laporan          StatusLaporan @default(BARU)
  createdAt               DateTime     @default(now())

  @@index([id])
  laporan_penyambungan    LaporanPenyambungan?
}

model LaporanPenyambungan {
  id                      String       @id 
  laporan_yante_id        String       @unique
  foto_pemasangan_meter   String
  foto_rumah_pelanggan    String
  foto_ba_pemasangan      String
  nama_petugas            String
  status_laporan          StatusLaporan @default(SELESAI)
  createdAt               DateTime     @default(now())
  
  @@index([id])
  laporan_yante           LaporanYantek  @relation(fields: [laporan_yante_id], references: [id])
}
